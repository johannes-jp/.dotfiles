# Xresources colors
# Set colors from Xresources
# note that the session manager (lightdm, etc.) merges Xresource colors like this
# exec --no-startup-id xrdb -merge ~/.Xresources in ~/.xinitrc in case you have color syncing issues
set_from_resource $color0 i3wm.color0
set_from_resource $color1 i3wm.color1
set_from_resource $color2 i3wm.color2
set_from_resource $color3 i3wm.color3
set_from_resource $color4 i3wm.color4
